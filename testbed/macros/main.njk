{% macro bsk_tb_main_heading_v2(
  title,
  show_index_link=true,
  title_prefix="BAS Style Kit Testbed",
  title_code=false
) %}
<header class="page-header bsk-tb-page-header">
  <div class="container-fluid">
    <h1>
      {% if title_prefix %}<strong>{{ title_prefix }}</strong>{% endif %}
      {{ title }}
      {% if title_code %}<small><code>{{ title_code }}</code></small>{% endif %}
      {% if show_index_link %}<small><a href="/testbed/">Back to index</a></small>{% endif %}
    </h1>
    <div class="lead">
      <span class="hidden-xs text-muted">Extra small</span>
      <span class="hidden-sm hidden-md hidden-lg hidden-xl visible-xs-inline"><strong>Extra small</strong>strong></span>
      路
      <span class="hidden-sm text-muted">Small</span>
      <span class="hidden-xs hidden-md hidden-lg hidden-xl visible-sm-inline"><strong>Small</strong></span>
      路
      <span class="hidden-md text-muted">Medium</span>
      <span class="hidden-xs hidden-sm hidden-lg hidden-xl visible-md-inline"><strong>Medium</strong></span>
      路
      <span class="hidden-lg-x text-muted">Large</span>
      <span class="hidden-xs hidden-sm hidden-md hidden-xl visible-lg-inline"><strong>Large</strong></span>
      路
      <span class="hidden-xl text-muted">Extra large (custom size)</span>
      <span class="hidden-xs hidden-sm hidden-md hidden-lg-x visible-xl-inline"><strong>Extra large (custom size)</strong></span>
    </div>
  </div>
</header>
{% endmacro %}

{% macro bsk_tb_section_heading_v2(
  title,
  _subtitle=false,
  _title_prefix=false,
  _title_code=false,
  _heading_level=2,
  _use_container=true,
  _show_index_link=true,
  _isolated_href=false,
  _use_isolated_href=false,
  _base_path="/"
) %}
<header {% if _use_container %}class="container-fluid"{% endif %}>
  <div class="page-header">
    <h{{ _heading_level }}>
      {% if _title_prefix %}<strong>{{ _title_prefix }}</strong>{% endif %} {{ title }} {% if _title_code %}<code>{{ _title_code }}</code>{% endif %}
      {% if _subtitle %}<small>{{ _subtitle }}</small>{% endif %}
      {% if _show_index_link %}<small><a href="{{ _base_path }}testbed/">Back to index</a></small>{% endif %}
      {% if _use_isolated_href %}<small><a href="{{ _base_path }}testbed/samples/{{ _isolated_href }}">View isolated</a></small>{% endif %}
    </h{{ _heading_level }}>
  </div>
</header>
{% endmacro %}

{% macro bsk_tb_section_v2(
  title,
  subtitle=false,
  title_prefix=false,
  title_code=false,
  heading_level=3,
  use_container=true,
  show_index_link=true,
  isolated_href=false,
  use_isolated_href=false,
  base_path="/"
) %}
<section>
  {{ bsk_tb_section_heading_v2(
    title,
    _subtitle=subtitle,
    _title_prefix=title_prefix,
    _title_code=title_code,
    _heading_level=heading_level,
    _use_container=use_container,
    _show_index_link=show_index_link,
    _isolated_href=isolated_href,
    _use_isolated_href=use_isolated_href,
    _base_path=base_path
  ) }}
  <main {% if use_container %}class="container-fluid"{% endif %}>
    {{ caller() }}
  </main>
</section>
{% endmacro %}
