{% import "macros/main.njk" as main %}

{% set main_base_path = data_base_path | default('/') %}

<!DOCTYPE html>
<html lang="en-GB">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head -->
    <title>BAS Style Kit Testbed</title>

    <!-- Compiled and minified customised Bootstrap CSS for the BAS Style Kit -->
    <link rel="stylesheet" href="{{ main_base_path }}dist/css/bootstrap-bsk.css">
    <!-- Compiled and minified BAS Style Kit CSS -->
    <link rel="stylesheet" href="{{ main_base_path }}dist/css/bas-style-kit.css">
    <!-- Local styles -->
    <link rel="stylesheet" href="{{ main_base_path }}testbed/testbed-assets/css/bsk-testbed-common.css">
  </head>
  <body>
    {% block main %}
    Page content
    {% endblock %}

    <footer class="container-fluid">
      <hr />
      <p class="text-danger">Base path: {{ main_base_path }}</p>
    </footer>
  </body>
</html>
