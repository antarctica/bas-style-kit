{% extends "layouts/base.layout.njk" %}

{% set sample_is_embedded = samples_are_embedded | default(false) %}

{% block main %}
  {% if sample_is_embedded %}
    {{ main.bsk_tb_section_heading_v2(
      sample_title,
      _title_prefix=sample_number,
      _title_code=sample_markup,
      _show_index_link=false,
      _use_container=false,
      _isolated_href=sample_href,
      _use_isolated_href=true,
      _base_path=main_base_path
    ) }}
  {% else %}
    {{ main.bsk_tb_main_heading_v2(
      sample_title,
      title_prefix=sample_number,
      title_code=sample_markup
    ) }}
  {% endif %}
  {% if sample_is_embedded == false %}<main class="container-fluid">{% endif %}
  {% block sample %}
  {% if sample_is_embedded == false %}</main>{% endif %}
  {% endblock %}
{% endblock %}
