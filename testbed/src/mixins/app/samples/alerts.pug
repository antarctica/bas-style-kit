mixin alert(variant, style, icon, dismissible)
  if dismissible == 'yes'
    div(id='alert-message-' + icon + '' class='bsk-alert bsk-alert-' + variant + ' bsk-alert-' + style + ' bsk-alert-dismissible' role='alert')
      button.bsk-close(type='button' data-bs-dismiss='alert' data-bs-target='#alert-message-' + icon + '' aria-label='Close') &times;
      if icon == 'yes'
        if variant == 'success'
          i.bsk-alert-icon.fa-fw.fas.fa-check(aria-hidden='true')
        if variant == 'warning'
          i.bsk-alert-icon.fa-fw.far.fa-exclamation-triangle(aria-hidden='true')
        if variant == 'danger'
          i.bsk-alert-icon.fa-fw.fas.fa-exclamation-circle(aria-hidden='true')
        if variant == 'info'
          i.bsk-alert-icon.fa-fw.far.fa-info-square(aria-hidden='true')
        if variant == 'experimental'
          i.bsk-alert-icon.fa-fw.far.fa-flask(aria-hidden='true')
      block
  else
    div(class='bsk-alert bsk-alert-' + variant + ' bsk-alert-' + style)
      if icon == 'yes'
        if variant == 'success'
          i.bsk-alert-icon.fa-fw.fas.fa-check(aria-hidden='true')
        if variant == 'warning'
          i.bsk-alert-icon.fa-fw.far.fa-exclamation-triangle(aria-hidden='true')
        if variant == 'danger'
          i.bsk-alert-icon.fa-fw.fas.fa-exclamation-circle(aria-hidden='true')
        if variant == 'info'
          i.bsk-alert-icon.fa-fw.far.fa-info-square(aria-hidden='true')
        if variant == 'experimental'
          i.bsk-alert-icon.fa-fw.far.fa-flask(aria-hidden='true')
      block

