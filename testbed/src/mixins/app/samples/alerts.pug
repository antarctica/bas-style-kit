mixin alert(variant, style, icon, dismissible)
  if dismissible == 'yes'
    div(class='bsk-alert bsk-alert-' + variant + ' bsk-alert-' + style + ' bsk-alert-dismissible')
      button.bsk-close(type='button' data-dismiss='alert' aria-label='close')
        i.fa.fa-fw.fa-times(aria-hidden='true')
      if icon == 'yes'
        if variant == 'success'
          i.fa.fa-fw.fa-check.bsk-alert-icon(aria-hidden='true')
        if variant == 'warning'
          i.fa.fa-fw.fa-exclamation-triangle.bsk-alert-icon(aria-hidden='true')
        if variant == 'danger'
          i.fa.fa-fw.fa-exclamation-circle.bsk-alert-icon(aria-hidden='true')
        if variant == 'info'
          i.fa.fa-fw.fa-info.bsk-alert-icon(aria-hidden='true')
        if variant == 'experimental'
          i.fa.fa-fw.fa-flask.bsk-alert-icon(aria-hidden='true')
      block
  else
    div(class='bsk-alert bsk-alert-' + variant + ' bsk-alert-' + style)
      if icon == 'yes'
        if variant == 'success'
          i.fa.fa-fw.fa-check.bsk-alert-icon(aria-hidden='true')
        if variant == 'warning'
          i.fa.fa-fw.fa-exclamation-triangle.bsk-alert-icon(aria-hidden='true')
        if variant == 'danger'
          i.fa.fa-fw.fa-exclamation-circle.bsk-alert-icon(aria-hidden='true')
        if variant == 'info'
          i.fa.fa-fw.fa-info.bsk-alert-icon(aria-hidden='true')
        if variant == 'experimental'
          i.fa.fa-fw.fa-flask.bsk-alert-icon(aria-hidden='true')
      block

