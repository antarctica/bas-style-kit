mixin alert--collection(variant, style)
  section.app-sample-section
    header Standard
    +alert(variant, style)
      | #{ variant } alert

  section.app-sample-section
    header Alert link
    +alert(variant, style)
      | #{ variant } alert with a #[a.bsk-alert-link(href='#') link]

  section.app-sample-section
    header Alert with contextual icon
