mixin navs--variant(variant)
  nav(role='navigation')
    ul.bsk-nav(class!=attributes.class)
      li(role='presentation'): a(href='#') nav 1
      if variant == 'active'
        li.bsk-active(role='presentation'): a(href='#') active nav
      else if variant == 'disabled'
        li.bsk-disabled(role='presentation'): a(href='#') disabled nav
      li(role='presentation'): a(href='#') nav 2

mixin navs--nav-panels(set, fade_effect)
  div.bsk-tab-content
    unless fade_effect
      div.bsk-tab-pane.bsk-active(role='tabpanel' id=set + '1') Nav pane 1
      div.bsk-tab-pane(role='tabpanel' id=set + '2') Nav panel 2
      div.bsk-tab-pane(role='tabpanel' id=set + '3') Nav panel 3
      div.bsk-tab-pane(role='tabpanel' id=set + '4') Nav panel 4
    else
      div.bsk-tab-pane.bsk-fade.bsk-active.bsk-in(role='tabpanel' id=set + '1') Nav pane 1
      div.bsk-tab-pane.bsk-fade(role='tabpanel' id=set + '2') Nav panel 2
      div.bsk-tab-pane.bsk-fade(role='tabpanel' id=set + '3') Nav panel 3
      div.bsk-tab-pane.bsk-fade(role='tabpanel' id=set + '4') Nav panel 4
