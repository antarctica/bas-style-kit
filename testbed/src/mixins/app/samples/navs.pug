mixin navs--basic(long_titles_input, interactive_input, fade_effect_input)
  - interactive = false
  - long_titles = false
  - fade_effect_panels = false
  - panel_class = 'nav-panel'
  if long_titles_input == 'long_titles'
    - long_titles = true
  if interactive_input == 'interactive'
    - interactive = true
  if fade_effect_input == 'with_fade_effect'
    - fade_effect_panels = true
  if attributes.class == 'bsk-nav-pills'
    - panel_class = 'nav-panelP'
  else if attributes.class == 'bsk-nav-tabs'
    - panel_class = 'nav-panelT'

  unless interactive
    nav(role='navigation')
      ul.bsk-nav(class!=attributes.class role='tablist')
        unless long_titles
          li(role='presentation'): a(href='#') nav 1
          li(role='presentation'): a(href='#') nav 2
          li(role='presentation'): a(href='#') nav 3
          li(role='presentation'): a(href='#') nav 4
        else
          li(role='presentation'): a(href='#') nav 1
          li(role='presentation'): a(href='#') NA NA NA NA NA NA NA NA NA NA NA NA NA NA
          li(role='presentation'): a(href='#')
            | (x3) NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA
            | NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA
          li(role='presentation'): a(href='#') Batman!
  else
    nav.bsk-nav-wrapper(role='navigation')
      unless long_titles
        ul.bsk-nav(class!=attributes.class role='tablist')
          li.bsk-active(role='presentation'): a(href='#' + panel_class + 'A1' role='tab' data-toggle='tab') nav 1
          li(role='presentation'): a(href='#' + panel_class + 'A2' role='tab' data-toggle='tab') nav 2
          li(role='presentation'): a(href='#' + panel_class + 'A3' role='tab' data-toggle='tab') nav 3
          li(role='presentation'): a(href='#' + panel_class + 'A4' role='tab' data-toggle='tab') nav 4

        +navs--nav-panels(panel_class + 'A', fade_effect_panels)
      else
        ul.bsk-nav(class!=attributes.class role='tablist')
          li.bsk-active(role='presentation'): a(href='#' + panel_class + 'B1' role='tab' data-toggle='tab') nav 1
          li(role='presentation'): a(href='#' + panel_class + 'B2' role='tab' data-toggle='tab') NA NA NA NA NA NA NA NA NA NA NA NA NA NA
          li(role='presentation'): a(href='#' + panel_class + 'B3' role='tab' data-toggle='tab')
            | (x3) NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA
            | NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA
          li(role='presentation'): a(href='#' + panel_class + 'B4' role='tab' data-toggle='tab') Batman!

        +navs--nav-panels(panel_class + 'B', fade_effect_panels)

