mixin form-input--collection()
  +form-input--basic(attributes.type)
  +form-input--form-group('fieldset', attributes.type, 'yes', 'yes')
  +form-input--form-group-value(attributes.type)
  +form-input--form-group-placeholder(attributes.type)
  +form-input--form-group-value-placeholder(attributes.type)
  +form-input--form-group-attribute(attributes.type, 'required', {'required': 'required'})
  +form-input--form-group-attribute(attributes.type, 'readonly', {'readonly': 'readonly'})
  +form-input--form-group-attribute(attributes.type, 'disabled', {'disabled': 'disabled'})
  +form-input--form-group-placeholder-disabled(attributes.type)
  +form-input--form-group-state-focus(attributes.type)
  +form-input--form-group-validation-state(attributes.type, 'success')
  +form-input--form-group-validation-state(attributes.type, 'warning')
  +form-input--form-group-validation-state(attributes.type, 'error')

mixin form-input--basic(type)
  section.app-sample-section
    header Input only
    input(type=type)

mixin form-input--form-group(element_type, type, use_section, use_form)
  if use_section == 'yes'
    section.app-sample-section
      header Form group
      form
        #{ element_type }.bsk-form-group
          label.bsk-control-label #{ type } input
          input.bsk-form-control(type='#{ type }')
  else
    if use_form == 'yes'
      form
        #{ element_type }.bsk-form-group
          label.bsk-control-label #{ type } input
          input.bsk-form-control(type='#{ type }')
    else
        #{ element_type }.bsk-form-group
          label.bsk-control-label #{ type } input
          input.bsk-form-control(type='#{ type }')

mixin form-input--form-group-value(type)
  section.app-sample-section
    header Form group with #[code value] attribute value of #[samp example-value]
    form
      fieldset.bsk-form-group
        label.bsk-control-label #{ type } input with value attribute
        input.bsk-form-control(type='#{ type }' value='example-value')

