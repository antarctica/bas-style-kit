mixin form-input-radio-checkbox--collection(type, type_class)
  +form-input-radio-checkbox--basic(type, type_class)
  +form-input-radio-checkbox--form-group(type, type_class)
  +form-input-radio-checkbox--form-group-value(type, type_class)
  +form-input-radio-checkbox--form-group-attribute(type, type_class, 'required', {'required': 'required'}, 3)
  +form-input-radio-checkbox--form-group-attribute(type, type_class, 'readonly', {'readonly': 'readonly'}, 4)
  +form-input-radio-checkbox--form-group-attribute(type, type_class, 'disabled', {'disabled': 'disabled'}, 5)
  +form-input-radio-checkbox--form-group-state-focus(type, type_class)
