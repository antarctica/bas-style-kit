mixin form-input-inline--collection()
  +form-input-inline--form-group(attributes.class)
  +form-input-inline--form-group-multiple(attributes.class)

mixin form-input-inline--form-group(classes)
  section.app-sample-section
    header Single input

    form.bsk-form-inline
      fieldset.bsk-form-group
        label(class!=classes) Text input
        input.bsk-form-control(type='text')

mixin form-input-inline--form-group-multiple(classes)
  section.app-sample-section
    header Multiple inputs

    form.bsk-form-inline
      fieldset
        div.bsk-form-group
          label(class!=classes) Text input 1
          input.bsk-form-control(type='text')
        div.bsk-form-group
          label(class!=classes) Text input 2
          input.bsk-form-control(type='text')
        div.bsk-form-group
          div.bsk-checkbox
            label.bsk-control-label
              input(type='checkbox')
              | Checkbox input

mixin form-grid--columns(number_of_columns)
  form
    each grid_col in [...Array(number_of_columns - 1).keys()]
      div.app-spacing-top
        p.bsk-text-info: code bsk-col-#{ number_of_columns }-md-#{ grid_col + 1 }
        fieldset.bsk-row
          div.bsk-form-group(class='bsk-col-' + number_of_columns + '-md-' + (grid_col + 1))
            label.bsk-control-label Text input
            input.bsk-form-control(type='text')
    div.app-spacing-top
      p.bsk-text-info: code bsk-col-#{ number_of_columns }-md-#{ number_of_columns }
      fieldset.bsk-row
        div.bsk-form-group(class='bsk-col-' + number_of_columns + '-md-' + number_of_columns)
          label.bsk-control-label Text input
          input.bsk-form-control(type='text')

mixin form-size(size)
  form
    fieldset(class!=attributes.class)
      label.bsk-control-label #{ size } text input
      input.bsk-form-control(type='text')

mixin form-input-group()
  form
    fieldset.bsk-form-group
      label.bsk-control-label control label
      div.bsk-input-group
        block

mixin form-input-group--size(size)
  form
    fieldset.bsk-form-group(class!=attributes.class)
      label.bsk-control-label #{size} form group
      div.bsk-input-group
        span.bsk-input-group-addon £
        input.bsk-form-control(type='number' placeholder='Amount (£, thousands)')
        span.bsk-input-group-addon 000
