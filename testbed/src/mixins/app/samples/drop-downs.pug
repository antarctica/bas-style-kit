mixin dropdown--button(interactive)
  if interactive == 'yes'
    div.bsk-dropdown
      button.bsk-btn.bsk-btn-default.bsk-dropdown-toggle(data-toggle='dropdown' type='button')
        | Dropdown #[span.bsk-caret]
      ul.bsk-dropdown-menu(class!=attributes.class)
        li: a(href='#') Action
        li: a(href='#') Another action
  else
    div.bsk-dropdown
      button.bsk-btn.bsk-btn-default.bsk-dropdown-toggle(type='button')
        | Dropdown #[span.bsk-caret]
      ul.bsk-dropdown-menu(class!=attributes.class)
        li: a(href='#') Action
        li: a(href='#') Another action

mixin dropdown--split-button
  div.bsk-btn-group
    button.bsk-btn.bsk-btn-default(type='button') Dropdown
    button.bsk-btn.bsk-btn-default.bsk-dropdown-toggle(type='button')
      span.bsk-caret
      span.bsk-sr-only Toggle Dropdown
    ul.bsk-dropdown-menu(class!=attributes.class)
      li: a(href='#') Action
      li: a(href='#') Another action

mixin dropdown--reversed(interactive)
    div.bsk-dropup
      button.bsk-btn.bsk-btn-default.bsk-dropdown-toggle(type='button')
        | Dropdown #[span.bsk-caret]
      ul.bsk-dropdown-menu(class!=attributes.class)
        li: a(href='#') Action
        li: a(href='#') Another action

mixin dropdown--component(interactive)
    div.bsk-dropdown
      button.bsk-btn.bsk-btn-default.bsk-dropdown-toggle(type='button')
        | Dropdown #[span.bsk-caret]
      ul.bsk-dropdown-menu.app-simulated-state-open
        li: a(href='#') Action
        block
        li: a(href='#') Another action
