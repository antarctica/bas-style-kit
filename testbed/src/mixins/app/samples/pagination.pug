mixin pagination(items, variant, variant_item)
  if items == 1
    nav
      ul.bsk-pagination(class!=attributes.class)
        if variant_item == 1
          if variant == 'active'
            li.bsk-active.bsk-page-item: a.bsk-page-link(href='#') 1
          if variant == 'disabled'
            li.bsk-disabled.bsk-page-item: a.bsk-page-link(href='#') 1
        else
          li.bsk-page-item: a.bsk-page-link(href='#') 1
  else if items == 2
    nav
      ul.bsk-pagination(class!=attributes.class)
        li.bsk-page-item: a.bsk-page-link(href='#') First
        li.bsk-page-item: a.bsk-page-link(href='#') Last
  else if items > 2
    nav
      ul.bsk-pagination(class!=attributes.class)
        li.bsk-page-item: a.bsk-page-link(href='#') First
        each item in [...Array(items - 2).keys()]
          if item == (variant_item - 1)
            if variant == 'active'
              li.bsk-active.bsk-page-item: a.bsk-page-link(href="#") #{ item + 1 }
            if variant == 'disabled'
              li.bsk-disabled.bsk-page-item: a.bsk-page-link(href="#") #{ item + 1 }
          else
            li.bsk-page-item: a.bsk-page-link(href="#") #{ item + 1 }
        li.bsk-page-item: a.bsk-page-link(href='#') Last

mixin pager(previous, next, previous_disabled, next_disabled)
  nav
    ul.bsk-pager(class!=attributes.class)
      if previous == 'yes'
        if previous_disabled == 'yes'
          li.bsk-disabled: a(href='#') Previous
        else
          li: a(href='#') Previous
      if next == 'yes'
        if next_disabled == 'yes'
          li.bsk-disabled: a(href='#') Next
        else
          li: a(href='#') Next
