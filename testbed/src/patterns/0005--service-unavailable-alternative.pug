extends ../layouts/app-pattern-page.pug

block append variables
  - attributes.main_content_classes.push('bsk-container bsk-pattern-service-unavailable');

block pattern
  h1.bsk-page-header Sorry, Sample Service is unavailable
  p.bsk-lead You will be able to use the service later.
  p You can use #[a(href='#') Another service] if you need to need to do something similar.
  p #[a(href='#') Contact the Sample Team] if you need further information.

  p.bsk-text-muted (#[a.bsk-text-experimental(href='/' + testbed_version + '/') Back to testbed index])
