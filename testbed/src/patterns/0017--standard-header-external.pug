extends ../layouts/app-pattern-component.pug

block pattern
  div#alert-message.bsk-alert.bsk-alert-static-top.bsk-alert-dismissible.bsk-alert-solid.bsk-alert-cookie-notice(role='alert')
    button.bsk-close(type='button' data-bs-dismiss='alert' data-bs-target='#alert-message' aria-label='Close') &times;
    | This website uses cookies to help us make it better - #[a.bsk-alert-link(href='#') find out more].
  nav.bsk-navbar.bsk-navbar-expand-sm.bsk-navbar-dark.bsk-bg-dark
    div.bsk-container-fluid
      a.bsk-navbar-brand(href='#') Site Name
      button.bsk-navbar-toggler.bsk-ms-auto(type='button' data-bs-toggle='collapse' data-bs-target='#bsk-example-navbar-collapse-1' aria-expanded='false' aria-label='Toggle navigation')
        span.bsk-navbar-toggler-icon
      div.bsk-collapse.bsk-navbar-collapse#bsk-example-navbar-collapse-1
        ul.bsk-navbar-nav
          li: a.bsk-nav-link.bsk-active(aria-current="page" href='#') Home #[current]
          li: a.bsk-nav-link(href='#') About
          li.bsk-dropdown
            a.bsk-dropdown-toggle.bsk-nav-link(href='#' role='button' id='dropdownMenu1' data-bs-toggle='dropdown' aria-expanded='false')
              | Dropdown
            ul.bsk-dropdown-menu(aria-labelledby='dropdownMenu1')
              li: a.bsk-dropdown-item(href='#') Action
              li: a.bsk-dropdown-item(href='#') Another action
              li: a.bsk-dropdown-item(href='#') Something else here
              li.bsk-divider(role='separator')
              li: a.bsk-dropdown-item(href='#') Separated link
              li.bsk-divider(role='separator')
              li: a.bsk-dropdown-item(href='#') One more separated link
        ul.bsk-nav.bsk-navbar-nav.bsk-ms-auto
          li.bsk-dropdown
            a.bsk-dropdown-toggle.bsk-nav-link(href='#' role='button' id='dropdownMenu2' data-bs-toggle='dropdown' aria-expanded='false')
              | Part of British Antarctic Survey
            ul.bsk-dropdown-menu.bsk-dropdown-menu-lg-end(aria-labelledby='dropdownMenu2')
              li: a.bsk-dropdown-item(href='https://www.bas.ac.uk') BAS Home
              li: a.bsk-dropdown-item(href='https://data.bas.ac.uk') Discover BAS data
              li: a.bsk-dropdown-item(href='#') Another service (optional)
  div.site-development-notice
    div.bsk-container-fluid
      span.bsk-label.bsk-label-phase-alpha Alpha
      | &nbsp;
      | This is a new website â€“ your #[a(href='#') feedback] will help us to improve it.
    hr
