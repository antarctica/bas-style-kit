  pattern_variant:
    title: Service unavailable (replaced)
  pattern:
    title: Service unavailable
  ---

extends ../layouts/app-pattern-page.pug

block append variables
  - attributes.main_content_classes.push('bsk-pattern-service-unavailable');

block pattern
  h1.bsk-page-header Sorry, Sample Service is unavailable
  p.bsk-lead This service has been replaced and can longer be used.
  p Use #[a(href='#') another service] if you need to do something.
  p #[a(href='#') Contact the Sample Team] if you need further information.

  p.bsk-text-muted (#[a.bsk-text-experimental(href='/' + testbed_version + '/') Back to testbed index])
