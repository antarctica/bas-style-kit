extends ../layouts/app-pattern-page.pug

block append variables
  - attributes.main_content_classes.push('bsk-container bsk-pattern-start');

block pattern
  h1.bsk-page-header Sample Service

  section.bsk-service-uses
    h2.bsk-h3 Use this service to:
    ul
      li access some information
      li perform an action
      li etc.

  section.bsk-call-to-action
    button.bsk-btn.bsk-btn-primary.bsk-btn-lg
      | Start Now
      i.fa-fw.fas.fa-chevron-right

  section.bsk-more-information
    h2.bsk-h3 More information
    p Contact the #[a(href='#') Sample team] for information and help on how to use [website or application].

  p.bsk-text-muted (#[a.bsk-text-experimental(href='/' + testbed_version + '/') Back to testbed index])
