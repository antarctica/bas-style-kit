//-
  sample:
    title: Right aligned navbar items
    code: .bsk-navbar ul.bsk-navbar-nav.bsk-navbar-right
  collections:
    - components--navbars
  ---

extends ../layouts/app-sample.pug
include ../mixins/app/samples/navbars.pug

block sample
  section.app-sample-section
    header Standard

    +navbar--default
      ul.bsk-nav.bsk-navbar-nav.bsk-navbar-right
        li: a(href='#') Item

  section.app-sample-section
    header With left menu

    +navbar--default
      ul.bsk-nav.bsk-navbar-nav.bsk-navbar-left
        li: a(href='#') Left item
      ul.bsk-nav.bsk-navbar-nav.bsk-navbar-right
        li: a(href='#') Right item

  section.app-sample-section
    header With multiple right menus

    +navbar--default
      ul.bsk-nav.bsk-navbar-nav.bsk-navbar-right
        li: a(href='#') Right menu 1/2
      ul.bsk-nav.bsk-navbar-nav.bsk-navbar-right
        li: a(href='#') Right menu 2/2
