extends ../layouts/app-sample.pug

block sample
  style.
    .bsk-tb-exp-original {
      background-color: #f9f2f4;
      color: #c7254e;
    }
    .bsk-tb-exp-sky-blue {
      background-color: #e6f1f8;
      color: #1D5E83;
    }
    .bsk-tb-exp-aircraft-red {
      background-color: #EEA8BA;
      color: #890022;
    }
    .bsk-tb-exp-red {
      background-color: #E4ADB3;
      color: #770914;
    }
    .bsk-tb-exp-baby-pink {
      background-color: #FBDCE9;
      color: #A3677F;
    }
    .bsk-tb-exp-pink {
      background-color: #F1BBD4;
      color: #8F2656;
    }

