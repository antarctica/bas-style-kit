//-
  sample:
    title: Colours - Page background
  collections:
    - core--colours
  ---

extends ../layouts/app-sample.pug
include ../mixins/app/samples/colours.pug
include ../mixins/app/samples/alerts.pug

block sample
  section.app-sample-section
    div.bsk-row
      div.bsk-col-md-2
        +colour--swatch('HTML background', '$html-bg', '#333333')(class='app-colour-bsk-colour-std-grey-darker')
      div.bsk-col-md-2
        +colour--swatch('Body background', '$body-bg', '#FFFFFF')(class='app-colour-bsk-colour-std-white')
