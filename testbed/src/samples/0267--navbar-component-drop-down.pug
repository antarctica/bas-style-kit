//-
  sample:
    title: Navbar - drop-down item
    code: .bsk-navbar ul.bsk-navbar-nav .bsk-dropdown
    type: javascript
  collections:
    - components--navbars
  ---

extends ../layouts/app-sample.pug
include ../mixins/app/samples/navbars.pug

block sample
  section.app-sample-section
    header Standard

    +navbar--default
      ul.bsk-nav.bsk-navbar-nav
        +navbar--dropdown

  section.app-sample-section
    header With item

    +navbar--default
      ul.bsk-nav.bsk-navbar-nav
        li: a(href="#") Item
        +navbar--dropdown

  section.app-sample-section
    header With brand text

    +navbar--default
      div.bsk-navbar-header
        a.bsk-navbar-brand(href='#') Site Name
      ul.bsk-nav.bsk-navbar-nav
        +navbar--dropdown
