  sample:
    title: OGL symbol
  collections:
    - components--logos
  ---

extends ../layouts/app-sample.pug
include ../mixins/app/samples/logos.pug

block sample
  section.app-sample-section
    header White background
    +logomark--ogl('ogl-symbol-default-transparent')(class='app-logomark-bg-white')

  section.app-sample-section
    header Black background
    +logomark--ogl('ogl-symbol-default-transparent')(class='app-logomark-bg-black')

  section.app-sample-section
    header Transparent background
    +logomark--ogl('ogl-symbol-default-transparent')(class='app-logomark-bg-transparent')
