//-
  sample:
    title: Image copyright thumbnail caption
    code: .bsk-thumbnail.bsk-image-copyright
  collections:
    - components--image-copyright
  ---

extends ../layouts/app-sample.pug
include ../mixins/app/samples/buttons.pug

block sample
  section.app-sample-section
    header Standard

    figure.bsk-thumbnail.bsk-thumbnail-default.bsk-image-copyright
      img.bsk-image-copyright-image(src='/' + testbed_version + '/assets/img/placeholder-800-600.png' alt='thumbnail')
      figcaption.bsk-caption
        | Thumbnail caption #[a.bsk-image-copyright-attribution.bsk-pull-right(href='#') Copyright holder]

  section.app-sample-section
    header Inverse

    figure.bsk-thumbnail.bsk-thumbnail-inverse.bsk-image-copyright
      img.bsk-image-copyright-image(src='/' + testbed_version + '/assets/img/placeholder-800-600.png' alt='thumbnail')
      figcaption.bsk-caption
        | Thumbnail caption #[a.bsk-image-copyright-attribution.bsk-pull-right(href='#') Copyright holder]
