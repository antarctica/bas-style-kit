//-
  sample:
    title: Navbar - forms - submit button
    code: .bsk-navbar form.bsk-navbar-form .bsk-btn.bsk-navbar-btn.bsk-btn-default
  collections:
    - components--navbars
  ---

extends ../layouts/app-sample.pug
include ../mixins/app/samples/navbars.pug

block sample
  section.app-sample-section
    header Standard

    +navbar--default
      form.bsk-navbar-form
        +navbar--form-submit

  section.app-sample-section
    header With form input

    +navbar--default
      form.bsk-navbar-form
        +navbar--form-input
        | &nbsp;
        +navbar--form-submit

  section.app-sample-section
    header With form input in a large navbar

    +navbar--default(class='bsk-navbar-lg')
      form.bsk-navbar-form
        +navbar--form-input
        | &nbsp;
        +navbar--form-submit

  section.app-sample-section
    header With item

    +navbar--default
      ul.bsk-nav.bsk-navbar-nav
        li: a(href="#") Item
      form.bsk-navbar-form
        +navbar--form-submit

  section.app-sample-section
    header With brand text and form input

    +navbar--default
      div.bsk-navbar-header
        a.bsk-navbar-brand(href='#') Site Name
      form.bsk-navbar-form
        +navbar--form-input
        | &nbsp;
        +navbar--form-submit
