extends ../layouts/app-sample.pug
include ../mixins/app/samples/forms.pug

block sample
  section.app-sample-section
    header Before control
    +form-input-group
      div.bsk-input-group-btn
        button.bsk-btn.bsk-btn-default Button
      input.bsk-form-control(type='number' placeholder='Text input')

  section.app-sample-section
    header After control
    +form-input-group--button-after

  section.app-sample-section
    header Before and after control
    +form-input-group
      div.bsk-input-group-btn
        button.bsk-btn.bsk-btn-default Button
      input.bsk-form-control(type='number' placeholder='Text input')
      div.bsk-input-group-btn
        button.bsk-btn.bsk-btn-default Button
