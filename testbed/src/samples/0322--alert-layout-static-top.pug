extends ../layouts/app-sample.pug
include ../mixins/app/samples/alerts.pug

block sample
  +alert('warning', 'outline')
    div.bsk-text-center This sample uses fixed positioning and may look strange.

  section.app-sample-section
    header Standard

    div.bsk-alert.bsk-alert-static-top.bsk-alert-solid.bsk-alert-info(role='alert')
      | Info alert text
    div.app-visible-col-1

  section.app-sample-section
    header Without class

    div.bsk-alert.bsk-alert-solid.bsk-alert-info(role='alert')
      | Info alert text
    div.bsk-tb-visible-col-1

  section.app-sample-section
    header With class and navbar

    div.bsk-alert.bsk-alert-static-top.bsk-alert-solid.bsk-alert-info(role='alert')
      | Info alert text

    nav.bsk-navbar.bsk-navbar-static-top
      div.bsk-container-fluid
