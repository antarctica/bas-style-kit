//-
  sample:
    title: Navbar sizes
    code: .bsk-navbar
  collections:
    - components--navbars
  ---

extends ../layouts/app-sample.pug
include ../mixins/app/samples/navbars.pug

block sample
  section.app-sample-section
    +navbar--default
      div.bsk-navbar-text Regular navbar

    +navbar--default(class='bsk-navbar-lg')
      div.bsk-navbar-text Large navbar

  section.app-sample-section
    header With item

    +navbar--default
      ul.bsk-nav.bsk-navbar-nav
        li: a(href="#") Item

    +navbar--default(class='bsk-navbar-lg')
      ul.bsk-nav.bsk-navbar-nav
        li: a(href="#") Item

  section.app-sample-section
    header With brand text

    +navbar--default
      div.bsk-navbar-header
        a.bsk-navbar-brand(href='#') Site Name

    +navbar--default(class='bsk-navbar-lg')
      div.bsk-navbar-header
        a.bsk-navbar-brand(href='#') Site Name
