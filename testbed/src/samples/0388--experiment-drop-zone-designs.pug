  section.app-sample-section
    header Populated state (single file) - option 1 - in a #[code bsk-form-group]
    form
      fieldset.bsk-form-group.x-dz-option.x-dz-state-populated.x-dz-option-1p
        label.bsk-control-label(for='init-opt1p-fg') File upload (Drag and Drop)
        div#init-opt1p-fg.bsk-form-control
          div.bsk-row
            div.bsk-col-12-md-2
              div.bsk-media.x-dz-item.x-dx-item-option-1
                div.bsk-media-left.x-dz-item-ext png
                div.bsk-media-body
                  div.bsk-h5.bsk-media-heading rock-outcrop.png
                  | 280kb

  section.app-sample-section
    header Populated state (single file) - option 2 - in a #[code bsk-form-group] and #[code table]
    form
      fieldset.bsk-form-group.x-dz-option.x-dz-state-populated.x-dz-option-2p.x-dz-option-3
        label.bsk-control-label(for='init-opt3-fg') File upload (Drag and Drop)
        div#init-opt3-fg.bsk-form-control
          table.bsk-table
            thead
              tr
                th File Name
                th File Size
                th.bsk-text-right Actions
            tbody
              tr
                td foo.png
                td 200KB
                td.bsk-text-right: a(href='#') Remove File

  section.app-sample-section
    header Populated state (multiple files) - option 2 - in a #[code bsk-form-group] and #[code table]
    form
      fieldset.bsk-form-group.x-dz-option.x-dz-state-populated.x-dz-option-2p.x-dz-option-3
        label.bsk-control-label(for='init-opt3-fg') File upload (Drag and Drop)
        div#init-opt3-fg.bsk-form-control
          table.bsk-table
            thead
              tr
                th File Name
                th File Size
                th.bsk-text-right Actions
            tbody
              tr
