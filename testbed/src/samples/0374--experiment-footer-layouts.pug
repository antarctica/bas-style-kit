  style.
    .bsk-tb-exp-option1-ogl-symbol {
      text-align: center;
      display: block;
      margin-right: auto;
      margin-left: auto;
      margin-bottom: 10px;
    }
    .bsk-tb-exp-option1-ogl-text {
      text-align: center;
      margin-bottom: 20px;
      line-height:   20px;
    }
    .bsk-tb-exp-option1-governance {
      text-align: center;
    }

    .bsk-tb-exp-option2-ogl-symbol {
      text-align: center;
      display: block;
      margin-right: auto;
      margin-left: auto;
      margin-bottom: 10px;
    }
    .bsk-tb-exp-option2-ogl-text {
      text-align: center;
      margin-bottom: 20px;
      line-height:   20px;
    }
    .bsk-tb-exp-option2-governance {
      text-align: center;
    }

    @media (min-width: 768px) {
      .bsk-tb-exp-option1-ogl-symbol {
        float:      left !important;
        text-align: left;
        position:      relative;
        top:           5px;
        margin-left:   0;
        margin-bottom: 0;
        margin-right:  32px;
        width:         67px;
      }
      .bsk-tb-exp-option1-ogl-text {
        float:      left !important;
        text-align: left;
        max-width: 450px;
      }
      .bsk-tb-exp-option1-governance {
        clear:      both;
        margin-top: 20px;
        text-align: left;
      }

      .bsk-tb-exp-option2-ogl-symbol {
        float:      left !important;
        text-align: left;
        position:      relative;
        top:           5px;
        margin-left:   0;
        margin-bottom: 0;
        margin-right:  32px;
        width:         67px;
      }
      .bsk-tb-exp-option2-ogl-text {
        float:      left !important;
        text-align: left;
        max-width: 450px;
      }
      .bsk-tb-exp-option2-governance {
        clear:      both;
        margin-bottom: 20px;
        text-align: left;
      }

      .bsk-tb-exp-option3-governance {
        float: left !important;
      }
      .bsk-tb-exp-option3-ogl {
        padding-left: 53px;
        position: relative;
      }

      .bsk-tb-exp-option3-ogl-symbol {
        position: absolute;
        left: 0;
        top: 3px;
        width: 41px;
        height: 100%;
      }

      .bsk-tb-exp-option3-ogl-symbol a {
        display: block;
        width: 41px;
        height: 17px;
        overflow: hidden;
        text-indent: -999em;
        background: url('/develop/assets/img/ogl-symbol-inverse-transparent-17.png');
        background-repeat: no-repeat;
        background-position: 0 0;
      }
    }

