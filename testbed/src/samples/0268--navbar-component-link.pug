//-
  sample:
    title: Navbar - link
    code: .bsk-navbar .navbar-link
  collections:
    - components--navbars
  ---

extends ../layouts/app-sample.pug
include ../mixins/app/samples/navbars.pug

block sample
  section.app-sample-section
    header Standard

    +navbar--default
      +navbar--link

  section.app-sample-section
    header With text

    +navbar--default
      div.bsk-navbar-text Some text with a #[a.bsk-navbar-link(href='#') Link]

  section.app-sample-section
    header With item

    +navbar--default
      ul.bsk-nav.bsk-navbar-nav
        li: a(href="#") Item
      +navbar--link

  section.app-sample-section
    header With brand text

    +navbar--default
      div.bsk-navbar-header
        a.bsk-navbar-brand(href='#') Site Name
      +navbar--link
