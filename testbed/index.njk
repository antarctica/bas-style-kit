{% extends "layouts/base.layout.njk" %}

{% block main %}
{{ main.bsk_tb_main_heading_v2('Main index', show_index_link=false) }}

{% call main.bsk_tb_section_v2('Sample collections', heading_level=2, show_index_link=false) %}
<ul>
  {% for collection in data_collections %}
  <li><a href="{{ main_base_path }}testbed/collections/{{ collection.name }}.html">{{ collection.name }}</a></li>
  {% endfor %}
</ul>
{% endcall %}

{% call main.bsk_tb_section_v2('Samples', heading_level=2, show_index_link=false) %}
<p class="text-info"><strong>Note</strong> Sample references do not indicate any implied order or grouping to samples.</p>
<ul>
  {% for sample in data_samples %}
  <li><a href="{{ main_base_path }}testbed/samples/{{ sample.id }}--{{ sample.name }}.html"><strong>#{{ sample.id }}</strong>  {{ sample.name }}</a></li>
  {% endfor %}
</ul>
{% endcall %}
{% endblock %}
