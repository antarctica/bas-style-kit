{% extends "layouts/base.layout.njk" %}

{% block main %}
{{ main.bsk_tb_main_heading_v2('Main index', show_index_link=false) }}

{% call main.bsk_tb_section_v2('Notes', heading_level=2, show_index_link=false) %}
<ul>
  <li class="bsk-text-info">sample references do not indicate any implied order or grouping to samples</li>
  <li class="bsk-text-info">samples should not necessarily work - some are intentionally invalid or extream and are expected to fail</li>
  <li class="bsk-text-info">this test bed does not constitute end-user documentation, it is used for development purposes only</li>
  <li class="bsk-text-info">
    see <strong><a href="https://style-kit.web.bas.ac.uk">style-kit.web.bas.ac.uk</a></strong> or
    <strong><a href="https://style-kit-testing.web.bas.ac.uk">style-kit-testing.web.bas.ac.uk</a></strong> for end-user documentation
  </li>
</ul>
{% endcall %}

{% call main.bsk_tb_section_v2('Sample collections', heading_level=2, show_index_link=false) %}
<ul>
  {% for collection in data_collections %}
  <li><a href="{{ main_base_path }}testbed/collections/{{ collection.name }}.html">{{ collection.name }}</a></li>
  {% endfor %}
</ul>
{% endcall %}

{% call main.bsk_tb_section_v2('Samples', heading_level=2, show_index_link=false) %}
<ul>
  {% for sample in data_samples %}
  <li><a href="{{ main_base_path }}testbed/samples/{{ sample.id }}--{{ sample.name }}.html"><strong>#{{ sample.id }}</strong>  {{ sample.name }}</a></li>
  {% endfor %}
</ul>
{% endcall %}
{% endblock %}
