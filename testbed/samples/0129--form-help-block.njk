{% extends "layouts/sample.layout.njk" %}

{% import "macros/form.njk" as form %}

{% set sample_href = "0129--form-help-block.html" %}
{% set sample_number = "#0129" %}
{% set sample_title = "From group layout" %}
{% set sample_markup = '.form-group .help-block' %}

{% block sample %}
<form>
  <fieldset class="form-group">
    <label class="control-label">Text input</label>
    <input type="text" class="form-control">
    <p class="help-block">
      Please enter your name as you would expect in a reply (e.g. Mr. A Smith).
    </p>
  </fieldset>
</form>

<p class="text-info">Using with <code>.text-muted</code></p>
<form>
  <fieldset class="form-group">
    <label class="control-label">Text input</label>
    <input type="text" class="form-control">
    <p class="help-block text-muted">
      Please enter your name as you would expect in a reply (e.g. Mr. A Smith).
    </p>
  </fieldset>
</form>
{% endblock %}
