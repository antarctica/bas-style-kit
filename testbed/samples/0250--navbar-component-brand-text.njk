{% set sample_title = "navbar brand text" %}
{% set sample_markup = ".navbar.navbar-bsk .navbar-brand" %}

{% block sample %}
<h4 class="bsk-tb-margin-top bsk-tb-sample-sub-heading">Using <code>span</code></h4>
<nav class="navbar navbar-bsk">
  <div class="container-fluid">
    <div class="navbar-header">
      <span class="navbar-brand">Site Name</span>
    </div>
  </div>
</nav>

<nav class="navbar navbar-bsk">
  <div class="container-fluid">
    <div class="navbar-header">
      <span class="navbar-brand">NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA
      NA NA NA NA NA NA NA NA NA NA NA NA NA, NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA
      NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA NA, BATMAN!</span>
    </div>
  </div>
</nav>

<h4 class="bsk-tb-margin-top bsk-tb-sample-sub-heading">Using <code>span</code> with <code>br</code></h4>
<nav class="navbar navbar-bsk">
  <div class="container-fluid">
    <div class="navbar-header">
      <span class="navbar-brand">NA NA NA NA NA NA NA NA NA <br /> BATMAN!</span>
    </div>
  </div>
</nav>

<h4 class="bsk-tb-margin-top bsk-tb-sample-sub-heading">Using <code>a</code></h4>
<nav class="navbar navbar-bsk">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Site Name</a>
    </div>
  </div>
</nav>

<h4 class="bsk-tb-margin-top bsk-tb-sample-sub-heading">Using <code>a</code> with item</h4>
<nav class="navbar navbar-bsk">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">Site Name</a>
    </div>
    <ul class="nav navbar-nav">
      <li><a href="#">Item</a></li>
    </ul>
  </div>
</nav>
{% endblock %}
