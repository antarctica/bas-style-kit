<div class="bsk-alert bsk-alert-highlight-success bsk-alert-dismissible" role="alert">
  <button type="button" class="bsk-close" data-dismiss="alert" aria-label="Close"><i class="fa fa-times-circle" aria-hidden="true"></i></button>
  <i class="fa fa-check bsk-alert-icon" aria-hidden="true"></i> Success alert
</div>
{% endblock %}
