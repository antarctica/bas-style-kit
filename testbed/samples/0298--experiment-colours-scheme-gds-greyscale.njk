{% extends "layouts/sample.layout.njk" %}

{% set sample_href = "0298-experiment--colours-scheme-gds-greyscale.html" %}
{% set sample_number = "#0298" %}
{% set sample_title = "GDS greyscale colour scheme" %}
{% set sample_type_experiment = true %}

{% block sample %}
<div class="bsk-row">
  <div class="bsk-col-12-md-4">
    <h4 class="bsk-text-info">GDS Greyscale</h4>
    <p class="bsk-text-info">GDS white - <var>$gds-gs-white</var> - <code>#FFFFFF</code></p>
    <div class="bsk-tb-colour-swatch bsk-tb-colour-swatch-FFFFFF"></div>

    <p class="bsk-text-info">BAS grey 4 (lighter) - <var>$gds-gs-grey-4</var> - <code>#F8F8F8</code></p>
    <div class="bsk-tb-colour-swatch bsk-tb-colour-swatch-F8F8F8"></div>

    <p class="bsk-text-info">BAS grey 3 (light) - <var>$gds-gs-grey-3</var> - <code>#DEE0E2</code></p>
    <div class="bsk-tb-colour-swatch bsk-tb-colour-swatch-DEE0E2"></div>

    <p class="bsk-text-info">BAS grey 2 (dark) - <var>$gds-gs-grey-2</var> - <code>#BFC1C3</code></p>
    <div class="bsk-tb-colour-swatch bsk-tb-colour-swatch-BFC1C3"></div>

    <p class="bsk-text-info">BAS grey 1 (darker) - <var>$gds-gs-grey-1</var> - <code>#6F777B</code></p>
    <div class="bsk-tb-colour-swatch bsk-tb-colour-swatch-6F777B"></div>

    <p class="bsk-text-info">GDS black - <var>$gds-gs-black</var> - <code>#0B0C0C</code></p>
    <div class="bsk-tb-colour-swatch bsk-tb-colour-swatch-0B0C0C"></div>

    <p class="bsk-text-info">(Spacer)</p>
    <div class="bsk-tb-colour-swatch"></div>
  </div>
  <div class="bsk-col-12-md-4">
    <h4 class="bsk-text-info">Bootstrap Greyscale</h4>
    <p class="bsk-text-info">(Spacer)</p>
    <div class="bsk-tb-colour-swatch"></div>

    <p class="bsk-text-info">Gray lighter - <var>$gray-lighter</var> - <code>#EEEEEE</code></p>
    <div class="bsk-tb-colour-swatch bsk-tb-colour-swatch-EEEEEE"></div>

    <p class="bsk-text-info">Gray light - <var>$gray-light</var> - <code>#777777</code></p>
    <div class="bsk-tb-colour-swatch bsk-tb-colour-swatch-777777"></div>

    <p class="bsk-text-info">Gray - <var>$gray</var> - <code>#555555</code></p>
    <div class="bsk-tb-colour-swatch bsk-tb-colour-swatch-555555"></div>

    <p class="bsk-text-info">Gray dark - <var>$gray-dark</var> - <code>#333333</code></p>
    <div class="bsk-tb-colour-swatch bsk-tb-colour-swatch-333333"></div>

    <p class="bsk-text-info">Gray darker - <var>$gray-darker</var> - <code>#222222</code></p>
    <div class="bsk-tb-colour-swatch bsk-tb-colour-swatch-222222"></div>
  </div>
  <div class="bsk-col-12-md-4">
    <h4 class="bsk-text-info">Style Kit Greyscale</h4>
    <p class="bsk-text-info">(Spacer)</p>
    <div class="bsk-tb-colour-swatch"></div>

    <p class="bsk-text-info">BAS grey lighter - <var>$bsk-grey-lighter</var> - <code>#F4F6F9</code></p>
    <div class="bsk-tb-colour-swatch bsk-tb-colour-swatch-F4F6F9"></div>

    <p class="bsk-text-info">BAS grey light - <var>$bsk-grey-light</var> - <code>#E7EBF1</code></p>
    <div class="bsk-tb-colour-swatch bsk-tb-colour-swatch-E7EBF1"></div>
  </div>
</div>

{% endblock %}
