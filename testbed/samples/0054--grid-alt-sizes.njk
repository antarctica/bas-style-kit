{% extends "layouts/sample.layout.njk" %}

{% import "macros/grid.njk" as grid %}

{% set sample_href = "0054--grid-alt-sizes.html" %}
{% set sample_number = "#0054" %}
{% set sample_title = "mixed alt grid system" %}
{% set sample_markup = ".col-bsk-*-*" %}

{% block sample %}
<div class="container bsk-tb-visible-container">
  <div class="row">
    <p class="text-info">6 columns at multiple grid sizes:</p>
    <ul class="list-inline">
      <li>@ <code>xs</code> each item is <em>24</em> columns wide</li>
      <li>@ <code>sm</code> each item is <em>12</em> columns wide</li>
      <li>@ <code>md</code> each item is <em>6</em> columns wide</li>
      <li>@ <code>lg</code> each item is <em>3</em> columns wide</li>
      <li>@ <code>xl</code> each item is <em>1</em> columns wide</li>
    </ul>
    <div class="col-xl-1 col-lg-3 col-md-6 col-sm-12 col-xs-24 bsk-tb-visible-col-1"></div>
    <div class="col-xl-1 col-lg-3 col-md-6 col-sm-12 col-xs-24 bsk-tb-visible-col-2"></div>
    <div class="col-xl-1 col-lg-3 col-md-6 col-sm-12 col-xs-24 bsk-tb-visible-col-3"></div>
    <div class="col-xl-1 col-lg-3 col-md-6 col-sm-12 col-xs-24 bsk-tb-visible-col-4"></div>
    <div class="col-xl-1 col-lg-3 col-md-6 col-sm-12 col-xs-24 bsk-tb-visible-col-5"></div>
    <div class="col-xl-1 col-lg-3 col-md-6 col-sm-12 col-xs-24 bsk-tb-visible-col-6"></div>
  </div>
</div>
{% endblock %}
