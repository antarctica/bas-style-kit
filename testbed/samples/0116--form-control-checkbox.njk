{% extends "layouts/sample.layout.njk" %}

{% import "macros/form.njk" as form %}

{% set sample_href = "0116--form-control-checkbox.html" %}
{% set sample_number = "#0116" %}
{% set sample_title = "Checkbox input form control" %}
{% set sample_markup = '.checkbox .control-label input[type="checkbox"]' %}

{% block sample %}
<form>
  <fieldset class="form-group">
    <div class="checkbox">
      <label class="control-label">
        <input type="checkbox">Checkbox input
      </label>
    </div>
  </fieldset>
</form>

<form>
  <fieldset class="form-group">
    <div class="checkbox">
      <label class="control-label">
        <input type="checkbox" name="example-1" id="example-1-a" value="A">
          Option 1 (A)
      </label>
    </div>
    <div class="checkbox">
      <label class="control-label">
        <input type="checkbox" name="example-1" id="example-1-b" value="B">
          Option 1 (B)
      </label>
    </div>
    <div class="checkbox">
      <label class="control-label">
        <input type="checkbox" name="example-1" id="example-1-c" value="C">
          Option 1 (C)
      </label>
    </div>
  </fieldset>
</form>

<p class="text-info">Checkbox input with a single option selected</p>
<form>
  <fieldset class="form-group">
    <div class="checkbox">
      <label class="control-label">
        <input type="checkbox" name="example-2" id="example-2-a" value="A">
          Option 1 (A)
      </label>
    </div>
    <div class="checkbox">
      <label class="control-label">
        <input type="checkbox" name="example-2" id="example-2-b" value="B" checked>
          Option 1 (B)
      </label>
    </div>
    <div class="checkbox">
      <label class="control-label">
        <input type="checkbox" name="example-2" id="example-2-c" value="C">
          Option 1 (C)
      </label>
    </div>
  </fieldset>
</form>

<h4 class="bsk-tb-margin-top bsk-tb-sample-sub-heading">Required state</h4>
<p class="text-info">Radio input with the <code>required</code> attribute</p>
<form>
  <fieldset class="form-group">
    <div class="checkbox">
      <label class="control-label">
        <input type="checkbox" name="example-3" id="example-3-a" value="A" required>
          Option 1 (A)
      </label>
    </div>
    <div class="checkbox">
      <label class="control-label">
        <input type="checkbox" name="example-3" id="example-3-b" value="B" required>
          Option 1 (B)
      </label>
    </div>
    <div class="checkbox">
      <label class="control-label">
        <input type="checkbox" name="example-3" id="example-3-c" value="C" required>
          Option 1 (C)
      </label>
    </div>
  </fieldset>
</form>

<h4 class="bsk-tb-margin-top bsk-tb-sample-sub-heading">Disabled state</h4>
<p class="text-info">Radio input with the <code>disabled</code> attribute</p>
<form>
  <fieldset class="form-group">
    <div class="checkbox">
      <label class="control-label">
        <input type="checkbox" name="example-4" id="example-4-a" value="A" disabled>
          Option 1 (A)
      </label>
    </div>
    <div class="checkbox">
      <label class="control-label">
        <input type="checkbox" name="example-4" id="example-4-b" value="B" disabled>
          Option 1 (B)
      </label>
    </div>
    <div class="checkbox">
      <label class="control-label">
        <input type="checkbox" name="example-4" id="example-4-c" value="C" disabled>
          Option 1 (C)
      </label>
    </div>
  </fieldset>
</form>

<h4 class="bsk-tb-margin-top bsk-tb-sample-sub-heading">Readonly state</h4>
<p class="text-info">Radio input with the <code>readonly</code> attribute</p>
<form>
  <fieldset class="form-group">
    <div class="checkbox">
      <label class="control-label">
        <input type="checkbox" name="example-5" id="example-5-a" value="A" readonly>
          Option 1 (A)
      </label>
    </div>
    <div class="checkbox">
      <label class="control-label">
        <input type="checkbox" name="example-5" id="example-5-b" value="B" readonly>
          Option 1 (B)
      </label>
    </div>
    <div class="checkbox">
      <label class="control-label">
        <input type="checkbox" name="example-5" id="example-5-c" value="C" readonly>
          Option 1 (C)
      </label>
    </div>
  </fieldset>
</form>

<h4 class="bsk-tb-margin-top bsk-tb-sample-sub-heading">Focus state (simulated)</h4>
<form>
  <fieldset class="form-group">
    <div class="checkbox">
      <label class="control-label">
        <input type="checkbox" name="example-6" id="example-6-a" value="A" class="form-control bsk-tb-simulated-state-focus">
          Option 1 (A)
      </label>
    </div>
  </fieldset>
</form>

<h4 class="bsk-tb-margin-top bsk-tb-sample-sub-heading">Validation states</h4>
<p class="text-info">Radio input with the <code>.has-success</code>
(<strong class="text-success">Success</strong>) validation state statically applied.</p>
<form>
  <fieldset class="form-group has-success">
    <div class="checkbox">
      <label class="control-label">
        <input type="checkbox" name="example-7" id="example-7-a" value="A">
          Option 1 (A)
      </label>
    </div>
  </fieldset>
</form>

<p class="text-info">Radio input with the <code>.has-warning</code>
(<strong class="text-warning">Warning</strong>) validation state statically applied.</p>
<form>
  <fieldset class="form-group has-warning">
    <div class="checkbox">
      <label class="control-label">
        <input type="checkbox" name="example-8" id="example-8-a" value="A">
          Option 1 (A)
      </label>
    </div>
  </fieldset>
</form>

<p class="text-info">Radio input with the <code>.has-error</code>
(<strong class="text-danger">Error</strong>) validation state statically applied.</p>
<form>
  <fieldset class="form-group has-error">
    <div class="checkbox">
      <label class="control-label">
        <input type="checkbox" name="example-9" id="example-9-a" value="A">
          Option 1 (A)
      </label>
    </div>
  </fieldset>
</form>
{% endblock %}
