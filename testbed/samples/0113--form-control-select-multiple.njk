{% extends "layouts/sample.layout.njk" %}

{% import "macros/form.njk" as form %}

{% set sample_href = "0113--form-control-select-multiple.html" %}
{% set sample_number = "#0113" %}
{% set sample_title = "Multiple select form control" %}
{% set sample_markup = 'select[multiple].form-control' %}

{% block sample %}
<form>
  <fieldset class="form-group">
    <label class="control-label">Select</label>
    <select class="form-control" multiple>
      <option value="option-1">Option 1</option>
      <option value="option-2">Option 2</option>
      <option value="option-3">Option 3</option>
    </select>
  </fieldset>
</form>

<p class="text-info">Select input with multiple options selected</p>
<form>
  <fieldset class="form-group">
    <label class="control-label">Select</label>
    <select class="form-control" multiple>
      <option value="option-1" selected>Option 1</option>
      <option value="option-2">Option 2</option>
      <option value="option-3" selected>Option 3</option>
    </select>
  </fieldset>
</form>

<h4 class="bsk-tb-margin-top bsk-tb-sample-sub-heading">Required state</h4>
<p class="text-info">Select input with multiple selectable options and the <code>required</code> attribute</p>
<form>
