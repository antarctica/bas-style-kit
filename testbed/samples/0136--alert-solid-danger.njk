<div class="bsk-alert bsk-alert-solid-danger bsk-alert-dismissible" role="alert">
  <button type="button" class="bsk-close" data-dismiss="alert" aria-label="Close"><i class="fa fa-times-circle" aria-hidden="true"></i></button>
  <i class="fa fa-exclamation-circle bsk-alert-icon" aria-hidden="true"></i> Danger alert
</div>
{% endblock %}
