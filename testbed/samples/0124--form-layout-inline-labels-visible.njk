{% extends "layouts/sample.layout.njk" %}

{% import "macros/form.njk" as form %}

{% set sample_href = "0124--form-layout-inline-labels-visible.html" %}
{% set sample_number = "#0124" %}
{% set sample_title = "Inline form layout with visible labels" %}
{% set sample_markup = 'form.bsk-form-inline' %}

{% block sample %}
<form class="bsk-form-inline">
  <fieldset class="bsk-form-group">
    <label class="bsk-control-label">Text input</label>
    <input type="text" class="bsk-form-control">
  </fieldset>
</form>

<hr />

<form class="bsk-form-inline">
  <fieldset>
    <div class="bsk-form-group">
      <label class="bsk-control-label">Text input 1</label>
      <input type="text" class="bsk-form-control">
    </div>
    <div class="bsk-form-group">
      <label class="bsk-control-label">Text input 2</label>
      <input type="text" class="bsk-form-control">
    </div>
    <div class="bsk-form-group">
      <div class="bsk-checkbox">
        <label class="bsk-control-label">
          <input type="checkbox">Checkbox input
        </label>
      </div>
    </div>
  </fieldset>
</form>
{% endblock %}
