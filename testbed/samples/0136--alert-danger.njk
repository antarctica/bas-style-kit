{% extends "layouts/sample.layout.njk" %}

{% set sample_href = "0136--alert-danger.html" %}
{% set sample_number = "#0136" %}
{% set sample_title = "Dangerous alert" %}
{% set sample_markup = '.bsk-alert.bsk-alert-danger' %}

{% block sample %}
<div class="bsk-alert bsk-alert-danger" role="alert">Danger alert</div>

<h4 class="bsk-tb-margin-top bsk-tb-sample-sub-heading">With alert link</h4>
<div class="bsk-alert bsk-alert-danger" role="alert">Danger alert with a <a href="#" class="bsk-alert-link">link</a></div>

<h4 class="bsk-tb-margin-top bsk-tb-sample-sub-heading">With contextual icon</h4>
<div class="bsk-alert bsk-alert-danger" role="alert">
  <i class="fa fa-exclamation-circle text-danger" aria-hidden="true"></i> Danger alert
</div>

<h4 class="bsk-tb-margin-top bsk-tb-sample-sub-heading">With contextual conventional dismiss icons</h4>
<div class="bsk-alert bsk-alert-danger" role="alert">
  <button type="button" class="bsk-close" data-dismiss="alert" aria-label="Close"><i class="fa fa-times-circle" aria-hidden="true"></i></button>
  <i class="fa fa-exclamation-circle text-danger" aria-hidden="true"></i> Danger alert
</div>
{% endblock %}
