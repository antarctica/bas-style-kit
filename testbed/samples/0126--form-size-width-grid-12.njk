{% extends "layouts/sample.layout.njk" %}

{% import "macros/form.njk" as form %}

{% set sample_href = "0126--form-size-width-grid-12.html" %}
{% set sample_number = "#0126" %}
{% set sample_title = "Form control width using 12 grid" %}
{% set sample_markup = '.bsk-form-group.bsk-col-12-md-*' %}

{% set grid_columns=12 %}
{% set column_grid='bsk-col-12-md' %}

{% block sample %}
<div class="bsk-container bsk-tb-visible-container">
  <p class="bsk-text-info">Using the medium 12 column grid, in a fixed-width container.</p>

  <form>
{% for column_size in range(1, grid_columns) %}
    <p class="bsk-text-info"><code>form-group.{{ column_grid }}-{{ column_size }}</code></p>
    <fieldset class="bsk-row">
      <div class="bsk-form-group {{ column_grid }}-{{ column_size }}">
        <label class="bsk-control-label">Text input</label>
        <input type="text" class="bsk-form-control">
      </div>
    </fieldset>
{% endfor %}
    <p class="bsk-text-info"><code>form-group.{{ column_grid }}-{{ grid_columns }}</code></p>
    <fieldset class="bsk-row">
      <div class="bsk-form-group {{ column_grid }}-{{ grid_columns }}">
        <label class="bsk-control-label">Text input</label>
        <input type="text" class="bsk-form-control">
      </div>
    </fieldset>
  </form>
</div>
{% endblock %}
