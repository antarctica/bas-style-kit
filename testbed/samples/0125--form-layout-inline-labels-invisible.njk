{% extends "layouts/sample.layout.njk" %}

{% import "macros/form.njk" as form %}

{% set sample_href = "0125--form-layout-inline-labels-invisible.html" %}
{% set sample_number = "#0125" %}
{% set sample_title = "Inline form layout with invisible labels" %}
{% set sample_markup = 'form.form-inline' %}

{% block sample %}
<form class="form-inline">
  <fieldset class="form-group">
    <label class="sr-only">Text input</label>
    <input type="text" class="form-control">
  </fieldset>
</form>

<hr />

<form class="form-inline">
  <fieldset>
    <div class="form-group">
      <label class="sr-only">Text input 1</label>
      <input type="text" class="form-control">
    </div>
    <div class="form-group">
      <label class="sr-only">Text input 2</label>
      <input type="text" class="form-control">
    </div>
    <div class="form-group">
      <div class="checkbox">
        <label class="control-label">
          <input type="checkbox">Checkbox input
        </label>
      </div>
    </div>
  </fieldset>
</form>
{% endblock %}
