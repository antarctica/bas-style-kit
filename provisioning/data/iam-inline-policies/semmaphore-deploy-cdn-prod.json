{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "ListAllBuckets",
            "Effect": "Allow",
            "Action": [
                "s3:ListAllMyBuckets",
                "s3:GetBucketLocation"
            ],
            "Resource": [
                "arn:aws:s3:::*"
            ]
        },
        {
            "Sid": "MinimalSemaphoreS3DeploymentPermissions",
            "Effect": "Allow",
            "Action": [
                "s3:CreateBucket",
                "s3:ListAllMyBuckets",
                "s3:ListBucket",
                "s3:PutBucketWebsite"
            ],
            "Resource": [
                "arn:aws:s3:::bas-cdn-prod",
                "arn:aws:s3:::bas-cdn-prod/*"
            ]
        },
        {
            "Sid": "MinimalSemaphoreS3DeploymentPermissionsForCDN",
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket",
                "s3:GetObject",
                "s3:PutObject"
            ],
            "Resource": [
                "arn:aws:s3:::bas-cdn-prod/bas-style-kit",
                "arn:aws:s3:::bas-cdn-prod/bas-style-kit/*"
            ]
        }
    ]
}
